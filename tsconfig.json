{
  "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "useDefineForClassFields": false,
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "dist",
      "lib": [
          "ES2020",
          "DOM"
      ],
      "removeComments": true,
      "experimentalDecorators": true,
      "noEmitOnError": false,
      "rootDir": "."
  },
  "exclude": [
      "wwwroot/dist"
  ],
  "include": [
      "wwwroot/libs/vidyano/**/*.ts",
      "wwwroot/test/**/*.ts",
      "wwwroot/web-components/**/*.ts"
  ]
}